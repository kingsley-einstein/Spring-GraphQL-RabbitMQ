type User {
    id: ID!
    username: String!
    password: String!
    token: String!
}

type Mutation {
    newUser(username: String!, password: String!): User!
    updatePassword(id: ID!, password: String!): User!
}

type Query {
    users: [User]!
    byId(id: ID!): User!
    byToken(token: String!): User!
    userFromHeader: User!
}